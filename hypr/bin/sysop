#!/bin/bash

case `echo -e "Lock\\nHybrid Sleep\\nSuspend\\nHibernate\\nReboot\\nShutdown" | wofi --dmenu --insensitive` in \
  "Lock") \
    ${XDG_CONFIG_HOME}/hypr/bin/screenlock now;; \
  "Hybrid Sleep") \
    systemctl hybrid-sleep;; \
  "Suspend") \
    systemctl suspend;; \
  "Hibernate") \
    systemctl hibernate;; \
  "Reboot") \
    systemctl reboot;; \
  "Shutdown") \
    systemctl poweroff;; \
esac
